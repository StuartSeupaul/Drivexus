<%= form_for [@user, @appointment]  do |f| %>
<%= f.label :description %>
<%= f.text_field :description%>

<%= f.label :date %>
<%= f.text_field :date%>

<%= f.label :time %>
<%= f.time_field :time %>

<%= f.label :instructor, "Instructors" %>
<%= f.select :driver_id, @drivers %>

<%= f.submit  %>
<% end %>
