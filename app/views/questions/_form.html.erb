<div class="question-class" data-qid="<%= question.id %>">
  <h3><%= question.content %></h3>
  <% if question.choices.any? %>
    <ul>
      <% question.choices.each do |choice| %>
        <% choice.correct == 1 ? color_class = "correct" : color_class = "incorrect"%>
        <li class="<%= color_class %>"><%= choice.content %></li>
      <% end %>
    </ul>
  <% end %>
</div>
