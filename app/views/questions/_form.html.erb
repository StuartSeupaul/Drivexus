<div class="question-class" data-qid="<%= question.id %>">
  <% answers = Question.first.answers_for_a_question %>
  <% rating = Question.average_difficulty_of_question(answers) %>

  <span>
    &nbsp;
    <% 1.upto(Question.number_of_stars(rating)) do |star| %>
      &#9733;
    <% end %>
  </span>

  <h3><%= question.content %></h3>
  <% if question.choices.any? %>
    <ul>
      <% question.choices.each do |choice| %>
        <% choice.correct ? color_class = "correct" : color_class = "incorrect"%>
        <li class="<%= color_class %>"><%= choice.content %></li>
      <% end %>
    </ul>
  <% end %>

  <% if params[cohort] %>
  <div class="remove-question">
  </div>
</div>
